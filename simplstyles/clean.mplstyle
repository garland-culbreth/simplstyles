#----------------------------------------------------------
# A light theme using background colors from Primer
# https://primer.style/foundations/color/base-scales
#
#----------------------------------------------------------

# Figure-wide
figure.facecolor: white
lines.linewidth: 1
lines.solid_capstyle: round
lines.markersize: 6
patch.linewidth: 1
patch.edgecolor: "#d1d7e0"
# Colors
axes.prop_cycle: cycler("color", ["#418ace", "#e37064", "#47b8b3", "#8a56bd", "#d4596d", "#e5ac62", "#9da2ae"])
image.cmap: magma
# Axes
axes.spines.top: False
axes.spines.right: False
axes.facecolor: white
axes.edgecolor: "#b7bdc8"
axes.labelcolor: "#454c54"
axes.axisbelow: True
axes.grid: False
axes.linewidth: 1
axes.titlelocation: left
axes.titleweight: bold
# Grid
grid.color: "#e4eaf6"
grid.linestyle: -
grid.linewidth: 1
# Ticks
xtick.direction: inout
ytick.direction: inout
xtick.color: "#b7bdc8"
ytick.color: "#b7bdc8"
xtick.labelcolor: "#59636e"
ytick.labelcolor: "#59636e"
xtick.major.width: 1
ytick.major.width: 1
xtick.minor.width: 0.75
ytick.minor.width: 0.75
xtick.major.size: 5.0
ytick.major.size: 5.0
xtick.minor.size: 2.75
ytick.minor.size: 2.75
# Font
text.color: "#393f46"
font.family: sans-serif
font.sans-serif: Cronos Pro, Myriad Pro, Inter, Helvetica, Arial, sans-serif
mathtext.fontset: stixsans
font.size: 12
axes.labelsize: 14
axes.titlesize: 14
xtick.labelsize: 12
ytick.labelsize: 12
legend.fontsize: 12
# Legend
legend.frameon: False
legend.numpoints: 1
legend.scatterpoints: 1
# Scatter plots
scatter.edgecolors: face
# Boxplots
boxplot.showcaps: False
boxplot.showbox: False
boxplot.showfliers: False
